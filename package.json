{
  "name": "voice-lib",
  "version": "1.0.0",
  "description": "A speech-to-text library with InversifyJS",
  "main": "dist/voice-lib.js",
  "types": "dist/types/voice-lib.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production webpack",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist/types",
