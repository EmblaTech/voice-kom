    "stt",
    "voice",
    "audio",
    "inversify"
  ],
  "dependencies": {
    "compromise": "^14.14.4",
    "inversify": "^6.2.2",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^3.3.4",
    "css-loader": "^6.8.1",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  }
}